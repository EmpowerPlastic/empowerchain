Â  --from $wallet \
Â  --commission-max-change-rate "0.01" \
Â  --commission-max-rate "0.2" \
Â  --commission-rate "0.05" \
Â  --min-self-delegation "1" \
Â  --pubkey  $(empowerd tendermint show-validator) \
Â  --moniker [MONIKER] \
Â  --chain-id $empowerd \
Â  --gas auto \
Â  --gas-adjustment 1.3 \
Â  --fees 10000umpwr '
